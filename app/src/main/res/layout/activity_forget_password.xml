<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#092635"
    tools:context=".forgetPassword">

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Need help to login"
        android:textColor="#9EC8B9"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif-black"
        android:text="Find your account"
        android:textColor="#9EC8B9"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Enter username or the email linked \nto your account"
        android:textAlignment="center"
        android:textColor="#BEDCD1" />

    <EditText
        android:id="@+id/et_forgotinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txt2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_custom"
        android:hint="Username or email"
        android:padding="15dp"
        android:textSize="15sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_forgotinfo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_custom"
        android:text="Next"
        android:textColor="@android:color/white" />
</RelativeLayout>